<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exa_107_Quizz"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_purple"
        android:padding="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kategorie: HTL Kaindorf"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Welche Mannschaft gewann die meisten Titel in der Ã¶sterreichischen Bundesliga?"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:padding="15dp"
        android:layout_margin="10dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btAnswer1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Rapid Wien"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/black"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btAnswer2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="FC Salzburg"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/black"
            android:layout_margin="10dp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btAnswer3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Austria Wien"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/black"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btAnswer4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Sturm Graz"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/black"
            android:layout_margin="5dp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:id="@+id/answersToMake">

        <Button
            android:id="@+id/btStatus1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btStatus2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btStatus3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btStatus4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btStatus5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_margin="5dp"/>
    </TableRow>

    <Button
        android:id="@+id/btNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WEITER"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_margin="10dp"
        android:onClick="nextQuestion" />
</TableLayout>